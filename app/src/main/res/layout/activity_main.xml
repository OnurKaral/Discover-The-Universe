
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:id="@+id/mrelativelayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <ImageView

          android:id="@+id/image_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="3dp" />


      <ToggleButton
          android:id="@+id/addfavorites"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_above="@+id/titletv"
          android:layout_alignParentEnd="true"
          android:layout_marginRight="8dp"
          android:background="@drawable/selector"
          android:textOff=""
          android:textOn=""


          >

      </ToggleButton>


      <ImageView
          android:id="@+id/image_view2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="3dp"
          android:visibility="invisible" />


      <com.google.android.material.button.MaterialButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_alignParentBottom="true"
          android:text="Click to Watch"
          android:textAllCaps="false"
          android:visibility="invisible"
          android:id="@+id/mvideobutton">


      </com.google.android.material.button.MaterialButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:layout_marginLeft="10dp"
        android:id="@+id/titletv"
        android:layout_marginTop="2dp"
        android:textColor="#6200ee"
        android:textSize="16sp"
        android:textStyle="bold"></TextView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/titletv"
      android:layout_marginLeft="10dp"
      android:id="@+id/infotv"
      android:textColor="#1b1b1b"
      android:textSize="13sp">
  </TextView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/infotv"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="2dp"
      android:id="@+id/datetv"
      android:textColor="#1b1b1b"
      android:textSize="12sp"
      android:textStyle="bold">
  </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/datetv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="TEST"

        android:textColor="#1b1b1b"
        android:textSize="50sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:visibility="invisible"></TextView>

  </RelativeLayout>

</ScrollView>

  <ProgressBar
      style="?android:attr/progressBarStyle"
      android:id="@+id/mprogressbar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center">
  </ProgressBar>


    <com.google.android.material.bottomappbar.BottomAppBar
        app:menu="@menu/bar_menu"
        android:id="@+id/bar"

        style="@style/Widget.MaterialComponents.BottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        app:backgroundTint="#6200ee"
        app:fabAlignmentMode="end"
        app:hideOnScroll="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        app:fabAnimationMode="slide"

        app:navigationIcon="@drawable/ic_menu_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/cardview_light_background"
        app:layout_anchor="@id/bar"
        app:srcCompat="@drawable/ic_calendaryeni" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>


