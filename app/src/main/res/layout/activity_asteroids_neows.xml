<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.DiscoverTheUniverse.NavigationUI.asteroids_neows">

    <TextView
        android:id="@+id/neowstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:text="@string/near_earth_objects"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/asteroidstw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/neowstitle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="casual"
        android:gravity="start"

        android:textColor="#ffffff"
        android:textSize="65sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asteroidstw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/astronaut" />


</RelativeLayout>